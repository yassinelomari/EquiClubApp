<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/userLayoutImg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/userDetailImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_action_profil"
            app:civ_border_width="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userLayoutImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/pr_nom_nom"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutTeleUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:background="@drawable/border_bottom">
        <ImageView
            android:id="@id/teleIcon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/tele_icon"
            android:src="@drawable/ic_action_tele"/>
        <TextView
            android:id="@id/userTele"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_212666666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/teleIcon"
            app:layout_constraintEnd_toStartOf="@id/btnCallUser" />
        <ImageButton
            android:id="@id/btnCallUser"
            android:layout_width="60dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_action_call_tele"
            android:background="@android:color/transparent"
            android:contentDescription="@string/tele_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userTele"
            app:layout_constraintStart_toEndOf="@id/teleIcon"
            android:text="@string/telephone"
            android:textSize="14sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutEmailUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutTeleUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:background="@drawable/border_bottom">
        <ImageView
            android:id="@id/emailIcon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/email_icon"
            android:src="@drawable/ic_action_email"/>
        <TextView
            android:id="@id/userEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/email_email_ma"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/emailIcon"
            app:layout_constraintEnd_toStartOf="@id/btnEmailUser" />
        <ImageButton
            android:id="@id/btnEmailUser"
            android:layout_width="60dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_action_send_email"
            android:background="@android:color/transparent"
            android:contentDescription="@string/email_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userEmail"
            app:layout_constraintStart_toEndOf="@id/emailIcon"
            android:text="@string/email"
            android:textSize="14sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutTypeUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutEmailUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:background="@drawable/border_bottom">
        <ImageView
            android:id="@id/typeIcon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/identity_icon"
            android:src="@drawable/ic_action_profil"/>
        <TextView
            android:id="@id/userType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/role_de_l_utilisateur"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/typeIcon"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@id/userTypeLebel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userType"
            app:layout_constraintStart_toEndOf="@id/typeIcon"
            android:text="@string/role_de_l_utilisateur"
            android:textSize="14sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutDateContract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutTypeUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:background="@drawable/border_bottom">
        <ImageView
            android:id="@id/idRegisterIcon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/register_icon"
            android:src="@drawable/ic_action_register"/>
        <TextView
            android:id="@id/contractUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_00_00_0000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/idRegisterIcon" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/contractUser"
            app:layout_constraintStart_toEndOf="@id/idRegisterIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/date_du_contrat"
            android:textSize="14sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutDateLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutDateContract"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:background="@drawable/border_bottom">
        <ImageView
            android:id="@id/idLoginIcon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/register_icon"
            android:src="@drawable/ic_action_register"/>
        <TextView
            android:id="@id/loginUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_00_00_0000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/idLoginIcon" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/loginUser"
            app:layout_constraintStart_toEndOf="@id/idLoginIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/date_de_d_rnier_acc_s"
            android:textSize="14sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="#EAEAEA">
        <Button
            android:id="@id/calendarUser"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_action_calander" />
        <Button
            android:id="@id/btnEditUser"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_action_edit" />
        <Button
            android:id="@id/btnDisableUser"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-8dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_action_disable" />
        <Button
            android:id="@id/btnDeleteUser"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-8dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_action_delete" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>